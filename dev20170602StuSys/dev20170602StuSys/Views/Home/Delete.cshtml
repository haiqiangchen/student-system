@model dev20170602StuSys.Models.Student

@{
    ViewBag.Title = "Delete";
}
<h2>删除学生信息</h2>

<h3>你确定删除这个学生的成绩</h3>
<div>
    <h4>Student</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            <label class="control-label col-md-2">姓名</label>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            <label class="control-label col-md-2">任课老师</label>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.teacher)
        </dd>

        <dt>
            <label class="control-label col-md-2">学生学号</label>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.StuId)
        </dd>

        <dt>
            <label class="control-label col-md-2">登录密码</label>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Password)
        </dd>

        <dt>
            <label class="control-label col-md-2">语文成绩</label>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Chinese)
        </dd>

        <dt>
            <label class="control-label col-md-2">数学成绩</label>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Math)
        </dd>

        <dt>
            <label class="control-label col-md-2">英语成绩</label>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.English)
        </dd>

        <dt>
            <label class="control-label col-md-2">物理成绩</label>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Physics)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to List", "Borrow")
        </div>
    }
</div>
